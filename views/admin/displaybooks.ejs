<%- include('../partials/head', { title: PageTitle }) %>

  <style>
    .modern-card {
      background-color: #f9f9f9;
      border: none;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      padding: 30px;
      margin-top: 30px;
    }

    .table thead th {
      background-color: #1E1E2F;
      /* Matches dark navbar */
      color: white;
      border: none;
    }

    .table td,
    .table th {
      vertical-align: middle;
    }

    .btn-modern {
      background-color: #1E1E2F;
      /* Matches dark navbar */
      color: #D1D1D1;
      /* Light gray text for contrast */
      border-radius: 10px;
      border: none;
      padding: 5px 12px;
      font-size: 0.9rem;
    }

    .btn-modern:hover {
      background-color: #2F2F44;
      /* Slightly lighter for hover effect */
      color: #ffffff;
    }

    .btn-danger {
      color: #D1D1D1;
      /* Light gray text for contrast */
      border-radius: 10px;
      border: none;
      padding: 5px 12px;
      font-size: 0.9rem;
    }

    .btn-danger:hover {
      color: #ffffff;
    }
  </style>

  <div class="container">
    <div class="modern-card" style="color: #1E1E2F;">
      <h4>Book List</h4>

      <table class="table table-hover mt-2">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Picture</th>
            <th>Description</th>
            <th>Actions</th> <!-- Added header for buttons -->
          </tr>
        </thead>
        <tbody>
          <% books.forEach((book)=> { %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.author %>
              </td>
              <td>
                <%= book.genre %>
              </td>
              <td><img src="<%= book.imageUrl %>" alt="<%= book.title %>" style="width:50px;"></td>
              <td>
                <%= book.description %>
              </td>
              <td class="d-flex gap-2">
                <a href="/admin/edit-book/<%= book._id %>" class="btn btn-modern">Edit</a>
                <form method="POST" action="/admin/delete-book">
                  <input type="hidden" name="bookId" value="<%= book._id %>">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('../partials/footer') %>