<%- include('../partials/head.ejs', { title: PageTitle }) %>

    <div class="container py-5">
        <h1 class="text-center mb-5" style="color: #1E1E2F;">
            <%= PageTitle %>
        </h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card bg-dark text-light shadow-lg rounded-2 p-4">
                    <form action="/admin/edit-book" method="POST">
                        <input type="hidden" name="bookId" value="<%= book._id %>">

                        <div class="mb-3">
                            <label for="title" class="form-label">Book Title</label>
                            <input type="text" class="form-control bg-light text-dark" id="title" name="title" required
                                value="<%= book.title %>">
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label">Price ($)</label>
                            <input type="number" step="0.01" min="0" class="form-control bg-light text-dark" id="price"
                                name="price" required value="<%= book.price %>">
                        </div>

                        <div class="mb-3">
                            <label for="author" class="form-label">Author</label>
                            <input type="text" class="form-control bg-light text-dark" id="author" name="author"
                                required value="<%= book.author %>">
                        </div>

                        <div class="mb-3">
                            <label for="genre" class="form-label">Genre</label>
                            <input type="text" class="form-control bg-light text-dark" id="genre" name="genre" required
                                value="<%= book.genre %>">
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <input type="text" class="form-control bg-light text-dark" id="category" name="category"
                                required value="<%= book.category %>">
                        </div>

                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating (1 to 5)</label>
                            <input type="number" step="0.1" min="1" max="5" class="form-control bg-light text-dark"
                                id="rating" name="rating" required value="<%= book.rating %>">
                        </div>

                        <div class="mb-3">
                            <label for="publisher" class="form-label">Publisher</label>
                            <input type="text" class="form-control bg-light text-dark" id="publisher" name="publisher"
                                required value="<%= book.publisher %>">
                        </div>

                        <div class="mb-3">
                            <label for="publishedDate" class="form-label">Published Date</label>
                            <input type="date" class="form-control bg-light text-dark" id="publishedDate"
                                name="publishedDate" required
                                value="<%= book.publishedDate ? book.publishedDate.toISOString().substring(0,10) : '' %>">
                        </div>

                        <div class="mb-3">
                            <label for="isbn" class="form-label">ISBN</label>
                            <input type="text" class="form-control bg-light text-dark" id="isbn" name="isbn" required
                                value="<%= book.isbn %>">
                        </div>

                        <div class="mb-3">
                            <label for="imageUrl" class="form-label">Image URL</label>
                            <input type="text" class="form-control bg-light text-dark" id="imageUrl" name="imageUrl"
                                required value="<%= book.imageUrl %>">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control bg-light text-dark" id="description" name="description"
                                rows="4" required><%= book.description %></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-light rounded-pill px-4">Update Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>