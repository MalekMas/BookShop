<%- include('../partials/head', { title: PageTitle }) %>

    <style>
        body {
            color: #222831;
            font-weight: 300;
            background-color: #f2f3f7;
        }

        .login-card {
            background-color: #f2f3f7;
            border-radius: 18px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.07);
            padding: 50px 40px;
            margin-top: 60px;
            max-width: 640px;
            /* increased width */
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            animation: fadeInUp 0.8s ease forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card h2 {
            font-weight: 700;
            color: #222831;
            margin-bottom: 25px;
            font-family: 'Poppins', sans-serif;
            font-size: 2.4rem;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-family: 'Roboto', sans-serif;
            font-size: 1rem;
            color: #555959;
            font-weight: 500;
        }

        .form-input {
            padding: 12px 16px;
            font-size: 1rem;
            border-radius: 12px;
            border: 1px solid #ccc;
            font-family: 'Roboto', sans-serif;
            outline: none;
            transition: border-color 0.3s ease;
        }

        .form-input:focus {
            border-color: #1E1E2F;
        }

        .btn-modern {
            background-color: #1E1E2F;
            color: #b0b0b0;
            border-radius: 12px;
            padding: 12px 20px;
            border: none;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            font-size: 1.1rem;
            box-shadow: 0 4px 8px rgba(30, 30, 47, 0.5);
            transition: background-color 0.35s ease, color 0.35s ease, transform 0.3s ease;
            cursor: pointer;
        }

        .btn-modern:hover {
            background-color: #2c2c3e;
            color: #e0e0e0;
            box-shadow: 0 6px 15px rgba(44, 44, 62, 0.7);
            transform: translateY(-3px);
        }

        .error-message {
            color: red;
            font-weight: 700;
            text-align: center;
            margin-bottom: 10px;
        }

        .signup-link {
            margin-top: 25px;
            text-align: center;
            color: #333;
            font-family: 'Roboto', sans-serif;
        }

        .signup-link a {
            color: #1E1E2F;
            font-weight: 600;
            text-decoration: none;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }

        /* Responsive tweaks */
        @media (max-width: 640px) {
            .login-card {
                padding: 40px 20px;
                margin-top: 40px;
                max-width: 90%;
            }
        }
    </style>

    <div class="login-card">
        <h2>Login</h2>
        <form action="/login" method="POST" novalidate>
            <% if (invalid) { %>
                <p class="error-message">Invalid credentials.</p>
                <% } %>

                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your name" required
                        class="form-input" />

                    <label for="email">Email address</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required
                        class="form-input" />

                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required
                        class="form-input" />

                    <button type="submit" class="btn-modern">Log In</button>

                    <div class="signup-link">
                        <p>
                            Don't have an account?
                            <a href="/signup">Sign up here</a>
                        </p>
                    </div>
        </form>
    </div>

    <%- include('../partials/footer') %>