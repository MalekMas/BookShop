<%- include('../partials/head', { title: 'My Profile' }) %>

  <style>
    body {
      color: #f1f1f1;
      font-family: 'Segoe UI', sans-serif;
      font-weight: 300;
      background-color: #f2f3f7;
    }

    .profile-page {
      background-color: #f2f3f7;
      border-radius: 18px;
      box-shadow: 0 6px 25px rgba(0, 0, 0, 0.07);
      padding: 50px 40px;
      margin-top: 60px;
      max-width: 480px;
      margin-left: auto;
      margin-right: auto;
      animation: fadeInUp 0.8s ease forwards;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(15px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .profile-page h2 {
      font-weight: 700;
      color: #222831;
      margin-bottom: 25px;
      font-family: 'Poppins', sans-serif;
      font-size: 2.4rem;
      text-align: center;
    }

    .profile-info {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .profile-label {
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      color: #555959;
      font-weight: 500;
    }

    .profile-data {
      font-size: 1.05rem;
      padding: 10px 14px;
      background-color: #ffffff;
      border-radius: 12px;
      border: 1px solid #ccc;
      color: #333;
      font-family: 'Roboto', sans-serif;
    }

    .btn-modern {
      background-color: #1E1E2F;
      color: #b0b0b0;
      border-radius: 12px;
      padding: 12px 20px;
      border: none;
      font-weight: 600;
      font-family: 'Poppins', sans-serif;
      font-size: 1.1rem;
      box-shadow: 0 4px 8px rgba(30, 30, 47, 0.5);
      transition: background-color 0.35s ease, color 0.35s ease, transform 0.3s ease;
      cursor: pointer;
      display: block;
      margin: 2rem auto 0;
      width: fit-content;
      text-decoration: none;
      text-align: center;
    }

    .btn-modern:hover {
      background-color: #2c2c3e;
      color: #e0e0e0;
      box-shadow: 0 6px 15px rgba(44, 44, 62, 0.7);
      transform: translateY(-3px);
    }

    @media (max-width: 480px) {
      .profile-page {
        padding: 40px 20px;
      }
    }
  </style>

  <div class="container">
    <div class="profile-page">
      <h2>My Profile</h2>
      <div class="profile-info">
        <div>
          <div class="profile-label">Name</div>
          <div class="profile-data">
            <%= user.name %>
          </div>
        </div>
        <div>
          <div class="profile-label">Email</div>
          <div class="profile-data">
            <%= user.email %>
          </div>
        </div>
      </div>
      <a href="/profile/edit" class="btn-modern">Edit Profile</a>
    </div>
  </div>

  <%- include('../partials/footer') %>