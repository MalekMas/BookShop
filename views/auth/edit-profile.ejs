<%- include('../partials/head', { title: 'Edit Profile' }) %>

  <style>
    body {
      color: #f1f1f1;
      font-family: 'Segoe UI', sans-serif;
      font-weight: 300;
      background-color: #f2f3f7;
    }

    .profile-card {
      background-color: #f2f3f7;
      border-radius: 18px;
      box-shadow: 0 6px 25px rgba(0, 0, 0, 0.07);
      padding: 50px 40px;
      margin-top: 60px;
      max-width: 480px;
      margin-left: auto;
      margin-right: auto;
      animation: fadeInUp 0.8s ease forwards;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(15px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .profile-card h2 {
      font-weight: 700;
      color: #222831;
      margin-bottom: 25px;
      font-family: 'Poppins', sans-serif;
      font-size: 2.4rem;
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    label {
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      color: #555959;
      font-weight: 500;
    }

    .form-input {
      padding: 12px 16px;
      font-size: 1rem;
      border-radius: 12px;
      border: 1px solid #ccc;
      font-family: 'Roboto', sans-serif;
      outline: none;
      transition: border-color 0.3s ease;
    }

    .form-input:focus {
      border-color: #1E1E2F;
    }

    .btn-modern {
      background-color: #1E1E2F;
      color: #b0b0b0;
      border-radius: 12px;
      padding: 12px 20px;
      border: none;
      font-weight: 600;
      font-family: 'Poppins', sans-serif;
      font-size: 1.1rem;
      box-shadow: 0 4px 8px rgba(30, 30, 47, 0.5);
      transition: background-color 0.35s ease, color 0.35s ease, transform 0.3s ease;
      cursor: pointer;
      display: block;
      margin: 2rem auto 0;
      width: fit-content;
      text-decoration: none;
      text-align: center;
    }

    .btn-modern:hover {
      background-color: #2c2c3e;
      color: #e0e0e0;
      box-shadow: 0 6px 15px rgba(44, 44, 62, 0.7);
      transform: translateY(-3px);
    }

    @media (max-width: 480px) {
      .profile-card {
        padding: 40px 20px;
      }
    }
  </style>

  <div class="container">
    <div class="profile-card">
      <h2>Edit Profile</h2>
      <form action="/profile/edit" method="POST" novalidate>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" required class="form-input" />

        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" required class="form-input" />

        <button type="submit" class="btn-modern">Save Changes</button>
      </form>
      <a href="/profile" class="btn-modern" style="margin-top: 1rem;">Cancel</a>
    </div>
  </div>

  <%- include('../partials/footer') %>