<%- include('../partials/head', { title: PageTitle }) %>

    <style>
        .card-container {
            max-width: 900px;
            margin: 40px auto;
            animation: fadeInUp 0.8s ease forwards;
        }

        .cart-card {
            background-color: #f5f6fa;
            border-radius: 18px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.07);
            padding: 30px;
            margin-bottom: 25px;
            transition: transform 0.3s ease;
        }

        .cart-card:hover {
            transform: translateY(-5px);
        }

        .cart-card h5 {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            margin-bottom: 10px;
            color: #1e1e2f;
        }

        .cart-card p {
            font-family: 'Roboto', sans-serif;
            color: #555;
            font-size: 0.95rem;
            margin-bottom: 5px;
        }

        .cart-card img {
            width: 80px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-right: 20px;
            /* ðŸ‘ˆ Added space after image */
        }

        .total-summary {
            background-color: #f5f6fa;
            padding: 20px 30px;
            border-radius: 14px;
            text-align: right;
            box-shadow: 0 4px 18px rgba(0, 0, 0, 0.05);
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            color: #1e1e2f;
            margin-top: 20px;
        }

        .btn-modern {
            background-color: #4a69bd;
            color: white;
            border: none;
            padding: 10px 18px;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .btn-modern:hover {
            background-color: #3b53a2;
            color: #fff;
        }

        a.btn-modern {
            text-decoration: none;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

    <div class="container card-container">
        <% if (cartItems.length===0) { %>
            <p class="text-center" style="color: #555;">Your cart is currently empty.</p>
            <div class="text-center mt-3">
                <a href="/bookshop/books" class="btn btn-modern">Back to Books</a>

            </div>
            <% } else { %>
                <% cartItems.forEach(item=> { %>
                    <div class="cart-card d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                            <div>
                                <h5>
                                    <%= item.title %>
                                </h5>
                                <p>Quantity: <%= item.quantity %>
                                </p>
                                <p>Price: $<%= item.price.toFixed(2) %>
                                </p>
                            </div>
                        </div>
                        <form action="/bookshop/cart-delete-item" method="POST">
                            <input type="hidden" name="bookId" value="<%= item._id %>">
                            <button type="submit" class="btn btn-modern">Remove</button>
                        </form>
                    </div>
                    <% }) %>

                        <div class="total-summary">
                            Total: $<%= totalPrice.toFixed(2) %>
                        </div>

                        <form action="/bookshop/orders" method="POST" class="text-end mt-3">
                            <button class="btn btn-modern" type="submit">Place Order</button>
                        </form>
                        <% } %>
    </div>

    <%- include('../partials/footer') %>