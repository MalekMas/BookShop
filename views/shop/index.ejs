        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .category-item {
        background-color: #1e1e2f;
        color: #b0b0b0;
        padding: 12px 22px;
        border-radius: 25px;
        font-weight: 500;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

    .category-item:hover {
        background-color: #2c2c3e;
        color: #ffffff;
    }

    @media (max-width: 768px) {
        .hero {
            flex-direction: column-reverse;
            padding: 50px 20px;
        }

        .hero-text h1 {
            font-size: 2rem;
        }
    }
</style>

