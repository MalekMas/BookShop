<%- include('../partials/head', { title: PageTitle }) %>

    <style>
        .welcome-card {
            background-color: #f5f6fa;
            border-radius: 18px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.07);
            padding: 50px 40px;
            margin-top: 60px;
            text-align: center;
            max-width: 720px;
            margin-left: auto;
            margin-right: auto;
            animation: fadeInUp 0.8s ease forwards;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 40px;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .welcome-text {
            flex: 1 1 300px;
        }

        .welcome-text h2 {
            font-weight: 700;
            color: #222831;
            margin-bottom: 25px;
            font-family: 'Poppins', sans-serif;
            font-size: 2.4rem;
        }

        .welcome-text p {
            font-size: 1.15rem;
            color: #555959;
            line-height: 1.6;
            margin-bottom: 35px;
            font-family: 'Roboto', sans-serif;
        }

        .btn-modern {
            background-color: #1E1E2F;
            color: #b0b0b0;
            border-radius: 12px;
            padding: 8px 20px;
            border: none;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            font-size: 0.9rem;
            box-shadow: 0 4px 8px rgba(30, 30, 47, 0.5);
            transition: background-color 0.35s ease, color 0.35s ease, transform 0.3s ease;
        }

        .btn-modern:hover {
            background-color: #2c2c3e;
            color: #e0e0e0;
            box-shadow: 0 6px 15px rgba(44, 44, 62, 0.7);
            transform: translateY(-3px);
        }

        .illustration-wrapper {
            flex: 1 1 320px;
            display: flex;
            justify-content: center;
        }

        .illustration {
            width: 100%;
            max-width: 380px;
            opacity: 0.85;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.07));
            animation: float 4s ease-in-out infinite;
            transition: transform 0.4s ease;
        }

        .illustration:hover {
            transform: scale(1.05);
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        /* Responsive tweaks */
        @media (max-width: 768px) {
            .welcome-card {
                flex-direction: column;
                padding: 40px 20px;
            }

            .illustration-wrapper {
                margin-top: 25px;
            }
        }
    </style>

    <div class="container">
        <div class="welcome-card">
            <div class="welcome-text">
                <h2>Discover Your Next Great Adventure in Every PageðŸ“š</h2>
                <p>
                    Browse a curated collection of books across various genres. Whether you're looking for thrillers,
                    romance, self-help, or academic titles â€” we have something for everyone.
                </p>
                <a href="/bookshop/books" class="btn btn-modern">Browse Books</a>
            </div>
            <div class="illustration-wrapper">
                <img src="https://cdn-icons-png.flaticon.com/512/29/29302.png" alt="Books" class="illustration" />
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>